<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Unified.StartupFlash" parent="AppTheme.Unified">
        <item name="android:windowBackground">@color/dark__background</item>
    </style>

    <style name="AppTheme.Unified" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionButtonStyle">@style/LessSpaceActionButtonStyle</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
        <item name="dialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Rounded</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Rounded</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:actionModeBackground">@color/action_bar_background</item>
        <item name="actionModeBackground">@color/action_bar_background</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:backgroundDimAmount">0.45</item>

        <!-- Android V21 options; ignore IDE warnings -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:targetApi="lollipop">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:targetApi="lollipop">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:targetApi="lollipop">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition" tools:targetApi="lollipop">@android:transition/move</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/action_bar_background</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/bar_background</item>

        <!-- Android V28 options; ignore IDE warnings -->
        <item name="android:dialogCornerRadius" tools:targetApi="p">@dimen/dialog_corner_radius</item>

        <!-- android-35 Disable window size overlap -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="VANILLA_ICE_CREAM">true</item>
    </style>

    <style name="AppTheme.Unified.Black" parent="AppTheme.Unified">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorBackgroundFloating">@color/black</item>
        <item name="actionModeBackground">@color/black</item>
        <item name="android:actionModeBackground">@color/black</item>
        <item name="dialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Rounded</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.DayNight.Dialog.Rounded</item>
    </style>

    <style name="AppTheme.PreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/AppTheme.PreferenceTheme.CategoryStyle</item>
    </style>

    <style name="AppTheme.PreferenceTheme.CategoryStyle" parent="Preference.Category">
        <item name="android:layout">@layout/opoc_pref_category_text</item>
    </style>

    <style name="LightTextToolbarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionModeBackground">@color/action_bar_background</item>
        <item name="actionModeBackground">@color/action_bar_background</item>

        <item name="android:textColorPrimary">@color/action_bar_content</item>
        <item name="actionMenuTextColor">@color/action_bar_content</item>
        <item name="android:textColorSecondary">@color/action_bar_content</item>
        <item name="colorControlNormal">@color/action_bar_content</item>
        <item name="colorControlHighlight">@color/action_bar_content</item>
    </style>

    <style name="ToolbarPopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/bar_content</item>
        <item name="android:textColorSecondary">@color/bar_content</item>
        <item name="colorControlNormal">@color/bar_content</item>
        <item name="popupMenuStyle">@style/PopupMenu.Light</item>
    </style>

    <style name="ToolbarPopupOverlayDark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/bar_content</item>
        <item name="android:textColorSecondary">@color/bar_content</item>
        <item name="colorControlNormal">@color/bar_content</item>
        <item name="popupMenuStyle">@style/PopupMenu.Dark</item>
    </style>

    <style name="ToolbarPopupOverlayBlack" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/bar_content</item>
        <item name="android:textColorSecondary">@color/bar_content</item>
        <item name="colorControlNormal">@color/bar_content</item>
        <item name="popupMenuStyle">@style/PopupMenu.Black</item>
    </style>

    <style name="AppTheme.Light.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- reduced spacing -->
    <style name="LessSpaceActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">1dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingEnd">8dip</item>
    </style>

    <style name="Theme.AppCompat.DayNight.Dialog.Rounded" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.45</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@drawable/rounded_corner_background</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorControlNormal">@color/bar_content</item>
        <item name="colorControlHighlight">@color/bar_content</item>
    </style>

    <style name="Theme.AppCompat.DayNight.Dialog.Rounded.Black" parent="Theme.AppCompat.DayNight.Dialog.Rounded" />

    <style name="PopupMenu.Light" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="PopupMenu.Dark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background</item>
    </style>

    <style name="PopupMenu.Black" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_menu_background_black</item>
    </style>
</resources>
