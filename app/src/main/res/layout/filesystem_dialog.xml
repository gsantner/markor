<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <TextView
        android:id="@+id/empty_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/light_grey"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/working_directory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="5dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingLeft="32dp"
        android:paddingRight="16dp"
        android:paddingStart="32dp"
        android:paddingTop="16dp"
        android:textColor="@color/grey"
        android:textSize="15sp" />

    <Button
        android:id="@+id/import_header_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/working_directory"
        android:layout_marginTop="8dp"
        android:background="@color/lighter_grey"
        android:drawableLeft="@drawable/ic_arrow_back_dkgray_24dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:minHeight="56dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/navigate_up_folder"
        android:textAllCaps="false"
        android:textColor="@color/dark_grey"
        android:textSize="16sp"
        tools:ignore="RtlHardcoded" />

    <ListView
        android:id="@+id/notes_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/import_header_btn"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:listSelector="@color/light_grey" />

</RelativeLayout>
